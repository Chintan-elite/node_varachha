          <select name="country" id="country" onchange="getStates(value)" class="form-control">
            <option value="0">---Select Country---</option>

        </select><br>

        <select name="state" id="state" onchange="getCities(value)" class="form-control">
            <option value="0">---Select state---</option>
        </select> <br>

        <select name="city" id="city" class="form-control" onchange="getData(value)">
            <option value="0">---Select city---</option>
        </select>

        <div class="card shadow-0 border">
          <div class="card-body p-4">

            <h4 class="mb-1 sfw-normal" id="city1"></h4>
            <p class="mb-2">Current temperature: <strong id="temp"></strong></p>
             <p class="mb-2">Current Pressure: <strong  id="pressure"></strong></p>
              <p class="mb-2" >Current Humidity: <strong id="humidity"></strong></p>
            <p>Lat: <strong id="lat"></strong>, Lng: <strong id="lng"></strong>
            </p>
           

          </div>
        </div>

      </div>
    </div>

  </div>
